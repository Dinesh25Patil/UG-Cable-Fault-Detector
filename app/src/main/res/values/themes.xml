        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="layout_color" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorAccent">#3EBAEA</item>
